doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        title Document
        link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous")
    include base/mixins.pug
    include base/variables.pug
    body
        nav
            .container
                ul.navbar-nav
                    li.nav-item-devider
                        span
                    li.nav-item
                        a.nav-link(href="#")
                            i(class="fab fa-github")
                    li.nav-item
                        a.nav-link(href="#")
                            i(class="fab fa-twitter")
                    li.nav-item
                        a.nav-link(href="#")
                            i(class="fab fa-instagram")
                ul.navbar-nav
                    +nav_item_dropdown("welcome.html", "active") Welcome
                        ul.dropdown-menu
                            each val, index in welcomeDropdown
                                +nav_item( index + ".html")= val
                    +nav_item_dropdown("landings.html") landings
                        ul.dropdown-menu
                            each val, index in langdingDropdown
                                +nav_item( index + ".html")= val
                    +nav_item_dropdown("landings.html") pages
                        ul.dropdown-menu
                            each val, index in pageDropdown
                                +nav_item( index + ".html")= val
                    +nav_item_dropdown("landings.html") components
                        ul.dropdown-menu
                            each val, index in componentsDropdown
                                +nav_item( index + ".html")= val
                    +nav_item_dropdown("landings.html") landings
                    +nav_item("documentation.html") documentation
                    +nav_item("purchase.html") purchase now
        section.banner
            .banner__content
                p.banner__author  by Simpleqode
                h2.banner__title Landing pages for any occasion
                p.banner__paragraph Incline is set of landing and support pages aimed at helping companies promote new products and business launches.
                a.banner__link(href="#") purchase now
        section.section
            .container
                h3.section__header Landing page variants
                p.section__paragraph Incline comes with several professionally designed landing pages that can be easily adapted for any project.
                .thumbnails
                    +thumbnail("company", "company landing", "You can use this page to promote your web or mobile application.")
                    +thumbnail("fullpage", "fullpage scrolling", "You can use this page to promote your web or mobile application.")
                    +thumbnail("product", "product landing", "You can use this page to promote your web or mobile application.")
                    +thumbnail("real", "Real estate landing", "You can use this page to promote your web or mobile application.")
                    +thumbnail("restaurant", "Restaurant landing", "You can use this page to promote your web or mobile application.", true)
                    +thumbnail("service", "Service landing", "You can use this page to promote your web or mobile application.")
                    +thumbnail("app", "App landing", "You can use this page to promote your web or mobile application.")

                    

